block variables
doctype html
html
  head
    title Osteoplus
    link(rel="stylesheet", href="/bower_components/bootstrap/dist/css/bootstrap.css")
    link(rel="stylesheet", href="/css/main.css")
    script(src="/bower_components/jquery/dist/jquery.js")
    script(src="/bower_components/bootstrap/dist/js/bootstrap.js")
    script(src="/js/main.js")
  body
    nav.navbar.navbar-inverse
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Osteoplus
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            if user
              li(class= menu == "Tableau de bord" ? "active" : "")
                a(href='/app/dashboard') Tableau de bord
              li(class= menu == "Agenda" ? "active" : "")
                a(href='/app/agenda') Agenda
              li(class= menu == "Patients" ? "active" : "")
                a(href='/app/patient') Patients
              li(class= menu == "Séances" ? "active" : "")
                a(href='/app/seances') Séances
          ul.nav.navbar-nav.navbar-right
            if user
              li(class= menu == "Profil" ? "active" : "")
                a(href="/user/profil") Profil
              li
                a(href="/user/logout") Déconnexion
            else
              li(class= menu == "Inscription" ? "active" : "")
                a(href="/user/register") Inscription
              li(class= menu == "Connexion" ? "active" : "")
                a(href="/user/login") Connexion
    
    
    .container
      
      != messages('message', locals)
      
      block content
      br
      hr
      footer
      p Copyright &copy; 2017
      
    
